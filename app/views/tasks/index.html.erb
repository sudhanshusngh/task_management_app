<div class="card">
  <div class="card-body">
    <h2 class='card-title' d-flex justify-content-between mb-4>
      <span>Tasks</span>
      <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>  
    </h2>

    <% @tasks.each do |task| %>
      <%= link_to task do %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= task.name %></h5>
            <p><%= task.description %></p>
          </div>
        </div>
      <%end%>
    <%end%>
  
  

